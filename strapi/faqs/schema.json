{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently asked questions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "answer": {
      "type": "text",
      "required": true,
      "maxLength": 2000
    },
    "categories": {
      "type": "enumeration",
      "enum": ["General", "Cloud Services", "Billing", "Technical Support", "Security", "Implementation", "Other"],
      "multiple": true,
      "required": true
    },
    "isVisible": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "group": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::faq-group.faq-group",
      "inversedBy": "faqs"
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "viewCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    },
    "helpfulCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    },
    "notHelpfulCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    },
    "lastEditedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": false
    },
    "publishedAt": {
      "type": "datetime",
      "required": false
    }
  }
}
