{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Customer testimonials and reviews for CloudNow website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 100,
      "minLength": 2
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 100,
      "minLength": 2
    },
    "company": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 100,
      "minLength": 2
    },
    "testimony": {
      "type": "text",
      "required": true,
      "maxLength": 1000,
      "minLength": 10
    },
    "image": {
      "type": "string",
      "required": false
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5,
      "default": 5
    },
    "categories": {
      "type": "json",
      "required": true,
      "default": []
    },
    "isVisible": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "groups": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::testimonial-group.testimonial-group",
      "mappedBy": "testimonials"
    },
    "publishedAt": {
      "type": "datetime",
      "required": false
    }
  }
}

