{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Customer testimonials and reviews"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "company": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "testimony": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5,
      "default": 5
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "Customer Success",
        "Product Review",
        "Service Quality",
        "Technical Support",
        "Implementation",
        "Partnership",
        "General Feedback"
      ],
      "multiple": true,
      "required": true
    },
    "isVisible": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "group": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::testimonial-group.testimonial-group",
      "inversedBy": "testimonials"
    },
    "publishedAt": {
      "type": "datetime",
      "required": false
    }
  }
}