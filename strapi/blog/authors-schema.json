{
  "kind": "collectionType",
  "collectionName": "blog-authors",
  "info": {
    "singularName": "blog-author",
    "pluralName": "blog-authors",
    "displayName": "Blog Author",
    "description": "Blog authors and content writers"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 2
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "bio": {
      "type": "text",
      "required": false,
      "maxLength": 1000
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "socialLinks": {
      "type": "json",
      "required": false
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "role": {
      "type": "enumeration",
      "enum": ["author", "editor", "admin"],
      "default": "author",
      "required": true
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "author"
    },
    "postCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": false
    }
  }
}
