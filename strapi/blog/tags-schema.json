{
  "kind": "collectionType",
  "collectionName": "blog-tags",
  "info": {
    "singularName": "blog-tag",
    "pluralName": "blog-tags",
    "displayName": "Blog Tag",
    "description": "Blog post tags for content tagging and filtering"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "minLength": 2,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": false,
      "maxLength": 300
    },
    "color": {
      "type": "string",
      "required": false,
      "maxLength": 7,
      "regex": "^#[0-9A-Fa-f]{6}$"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "usageCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "tags"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": false
    }
  }
}
