{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Service pages with page builder content for CloudNow website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 255,
      "minLength": 3
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 1000,
      "minLength": 10
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "IT Consulting",
        "Cloud Solutions",
        "Hosting Services",
        "Backup & Recovery",
        "Cybersecurity",
        "Professional Services",
        "Microsoft Solutions",
        "Other"
      ],
      "required": true,
      "default": "Other"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "inactive"],
      "default": "draft",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "pageContent": {
      "type": "json",
      "required": false,
      "default": {
        "blocks": [],
        "metadata": {
          "lastEditedAt": null,
          "version": 1
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": false
    },
    "publishedAt": {
      "type": "datetime",
      "required": false
    }
  }
}
